@model Watchlist.Models.FilmEditViewModel

@{
    ViewData["Title"] = $"{Model.Titre} - Edit";
}

<h1>@Model.Titre</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnneeDeSortie" class="control-label"></label>
                <input asp-for="AnneeDeSortie" class="form-control" />
                <span asp-validation-for="AnneeDeSortie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealisateurId" class="control-label"></label>
                <select asp-for="RealisateurId" id="RealisateurId"></select>
                <span asp-validation-for="RealisateurId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const select = document.querySelector('#RealisateurId');
            if (!select) return;

            const ts = new TomSelect(select, {
                    placeholder: 'Sélectionner un réalisateur',
                    valueField: 'id',
                    labelField: 'text',
                    searchField: 'text',
                    maxItems: 1,

                    load: function(query, callback) {
                        if (!query.length) return callback();

                        fetch(`/Films/SearchRealisateurs?term=${encodeURIComponent(query)}`)
                            .then(response => response.json())
                            .then(data => callback(data))
                            .catch(() => callback());
                    }
                });

            if ('@Model.RealisateurId' !== '' && '@(Model.RealisateurNom ?? "")' !== '') {
                ts.addOption({
                    id: '@Model.RealisateurId',
                    text: '@(Model.RealisateurNom?.Replace("'", "\\'") ?? "")'
                });
                    ts.setValue('@Model.RealisateurId');
            }
        });
    </script>
}
